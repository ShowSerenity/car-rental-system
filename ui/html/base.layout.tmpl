{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        <title>{{template "title" .}} - Car Deals</title>
        {{template "css" .}}
        <link rel='shortcut icon' href='/static/img/favicon.ico' type='image/x-icon'>
    </head>
    <body>
        <header>
            <h1><a href='/'>Car Deals</a></h1>
        </header>
        <nav>
            <div>
                <a href='/'>Home</a>
                <a href='/cars/economy'>Economy</a>
                <a href='/cars/comfort'>Comfort</a>
                <a href='/cars/minivan'>Minivan</a>
                {{if .IsAuthenticated}}
                    <a href='/snippet/create'>Create snippet</a>
                    <a href='/cars/create'>Add car</a>
                {{end}}
            </div>
            <div>
                {{if .IsAuthenticated}}
                    <a href='/user/profile'>Profile</a>
                    <form action='/user/logout' method='POST'>
                        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                        <button>Logout</button>
                    </form>
                {{else}}
                    <a href='/user/signup'>Signup</a>
                    <a href='/user/login'>Login</a>
                {{end}}
            </div>
        </nav>
        <main>
            {{with .Flash}}
            <div class='flash '>{{.}}</div>
            {{end}}
            {{template "main" .}}
        </main>

        {{template "footer" .}}

        {{template "scripts" .}}
        <script src="/static/js/main.js" type="text/javascript"></script>
    </body>
</html>
{{end}}